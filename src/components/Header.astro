---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
        <nav>
                <h2><a href="/">{SITE_TITLE}</a></h2>
                <div class="internal-links">
                        <HeaderLink href="/">Home</HeaderLink>
                        <HeaderLink href="/blog">Insights</HeaderLink>
                        <HeaderLink href="/about">About</HeaderLink>
                        <HeaderLink href="/admin">Content Panel</HeaderLink>
                </div>
                <div class="social-links">
                        <a href="mailto:hello@ntrcaexplore.com">hello@ntrcaexplore.com</a>
                        <span class="divider" aria-hidden="true">â€¢</span>
                        <a href="https://ntrcaexplore.com" target="_blank">ntrcaexplore.com</a>
                </div>
        </nav>
</header>
<style>
        header {
                margin: 0;
                padding: 0 1em;
                background: rgba(255, 255, 255, 0.96);
                box-shadow: 0 2px 8px rgba(var(--black), 5%);
        }
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
        nav {
                display: flex;
                align-items: center;
                justify-content: space-between;
                gap: 1rem;
        }
        nav a {
                padding: 1em 0.5em;
                color: var(--black);
                border-bottom: 4px solid transparent;
                text-decoration: none;
        }
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
        .social-links {
                display: flex;
                align-items: center;
                gap: 0.5rem;
                color: rgb(var(--gray));
                font-size: 0.95rem;
        }
        .social-links a {
                color: rgb(var(--accent-dark));
                padding: 0.35rem 0.5rem;
        }
        .divider {
                opacity: 0.5;
        }
        @media (max-width: 900px) {
                nav {
                        flex-direction: column;
                        align-items: flex-start;
                }
                .social-links {
                        width: 100%;
                        flex-wrap: wrap;
                }
        }
</style>
