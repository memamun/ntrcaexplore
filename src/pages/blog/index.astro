---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
        (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
        <head>
                <BaseHead title={`${SITE_TITLE} | Blog`} description={SITE_DESCRIPTION} />
                <style>
                        .hero {
                                text-align: center;
                                padding: 1rem 0 2rem 0;
                        }
                        .hero h1 {
                                margin-bottom: 0.4rem;
                        }
                        .filters {
                                display: inline-flex;
                                gap: 0.5rem;
                                flex-wrap: wrap;
                                justify-content: center;
                                margin: 1rem 0 0 0;
                        }
                        .grid {
                                display: grid;
                                grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
                                gap: 1.25rem;
                                margin-top: 1.5rem;
                        }
                        .post-card {
                                background: #fff;
                                border: 1px solid rgba(var(--gray), 10%);
                                border-radius: 16px;
                                overflow: hidden;
                                box-shadow: var(--box-shadow);
                                display: grid;
                                grid-template-rows: 160px 1fr;
                        }
                        .post-card img {
                                width: 100%;
                                height: 100%;
                                object-fit: cover;
                        }
                        .post-content {
                                padding: 1rem;
                                display: grid;
                                gap: 0.5rem;
                        }
                        .post-content a {
                                text-decoration: none;
                                color: inherit;
                        }
                        .post-content a:hover h3 {
                                color: var(--accent);
                        }
                        .meta {
                                display: flex;
                                align-items: center;
                                gap: 0.5rem;
                                color: rgb(var(--gray));
                                font-size: 0.95rem;
                        }
                        .empty {
                                text-align: center;
                                color: rgb(var(--gray));
                                padding: 2rem 0;
                        }
                </style>
        </head>
        <body>
                <Header />
                <main>
                        <section class="hero">
                                <p class="pill">Latest from NTRCA Explore</p>
                                <h1>Insights, alerts, and templates</h1>
                                <p class="muted">
                                        Quick reads that explain what changed, what you need to submit, and how to prepare for the next step.
                                </p>
                                <div class="filters">
                                        <span class="pill">Updates</span>
                                        <span class="pill">Exam prep</span>
                                        <span class="pill">Documentation</span>
                                        <span class="pill">Interview</span>
                                </div>
                        </section>

                        {posts.length === 0 ? (
                                <p class="empty">No posts yet. Use the content panel to add your first update.</p>
                        ) : (
                                <section class="grid">
                                        {posts.map((post) => (
                                                <article class="post-card">
                                                        <img src={post.data.heroImage} alt="" width={720} height={360} loading="lazy" />
                                                        <div class="post-content">
                                                                <div class="meta">
                                                                        <FormattedDate date={post.data.pubDate} />
                                                                        <span class="tag">{post.data.category ?? 'Update'}</span>
                                                                </div>
                                                                <a href={`/blog/${post.id}/`}>
                                                                        <h3>{post.data.title}</h3>
                                                                        <p class="muted">{post.data.description}</p>
                                                                </a>
                                                        </div>
                                                </article>
                                        ))}
                                </section>
                        )}
                </main>
                <Footer />
        </body>
</html>
